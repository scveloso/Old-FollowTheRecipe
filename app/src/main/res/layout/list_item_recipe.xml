<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/list_item_recipe_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:background="@android:color/darker_gray"
        android:cropToPadding="true"
        android:padding="4dp"/>
    
    <TextView
        android:id="@+id/list_item_recipe_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_recipe_image_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Recipe Title"/>

    <TextView
        android:id="@+id/list_item_recipe_number_ingredients_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/list_item_recipe_title_text_view"
        tools:text="Number of ingredients"
        android:layout_toLeftOf="@id/list_item_recipe_image_view"/>

    <TextView
        android:id="@+id/list_item_recipe_number_directions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Number of steps"
        android:padding="4dp"
        android:layout_below="@id/list_item_recipe_number_ingredients_text_view"
        android:layout_toLeftOf="@id/list_item_recipe_image_view"/>

</RelativeLayout>